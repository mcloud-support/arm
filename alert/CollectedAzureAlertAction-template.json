{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "actionGroupName": {
            "type": "string",
            "defaultValue": "Action-Mcloud-Service-Bus",
            "metadata": {
                "description": "Unique name within the resource group for the Action group."
            }
        },
        "actionGroupShortName": {
            "type": "string",
            "defaultValue": "Into-Mcloud",
            "metadata": {
                "description": "Short name up to 12 characters for the Action group."
            }
        },
        "logicAppReceiverName": {
            "type": "string",
            "defaultValue" : "ForwardedAzureAlertToServiceBus-faatsb",
            "metadata": {
                "description": "Name for the Logic App Receiver."
            }
        },
        "logicAppResourceGroupName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        },
        "tags": {
            "type": "object",
            "defaultValue": {
                "sourceFrom": "mcloud-support",
                "solution": "collect-alert-message"
            }
        }
    },
    "variables": {
        "logicAppResourceId": "[resourceId(subscription().subscriptionId, parameters('logicAppResourceGroupName'), 'Microsoft.Logic/workflows', parameters('logicAppReceiverName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Insights/actionGroups",
            "apiVersion": "2019-06-01",
            "name": "[parameters('actionGroupName')]",
            "location": "global",
            "tags": "[parameters('tags')]",
            "properties": {
                "groupShortName": "[parameters('actionGroupShortName')]",
                "enabled": true,
                "logicAppReceivers": [
                    {
                        "name": "[parameters('logicAppReceiverName')]",
                        "resourceId": "[variables('logicAppResourceId')]",
                        "callbackUrl": "[listCallbackURL(concat(resourceId('Microsoft.Logic/workflows/', parameters('logicAppReceiverName')), '/triggers/manual'), '2016-06-01').value]",
                        "useCommonAlertSchema": true
                    }
                ]
            }
        }
    ],
    "outputs": {
        "actionGroupId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Insights/actionGroups',parameters('actionGroupName'))]"
        }
    }
}