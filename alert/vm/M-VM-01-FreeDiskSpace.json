{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "alertRuleName": {
            "type": "string",
            "defaultValue": "Insufficient Disk Space",
            "metadata": {
                "description": "Name of the alert rule."
            }
        },
        "alertRuleDescription": {
            "type": "string",
            "defaultValue": "A low disk space alert.",
            "metadata": {
                "description": "Description of the alert rule."
            }
        },
        "workspaceName": {
            "type": "string",
            "metadata": {
                "description": "Specifies your log analytics workspace name."
            }
        },
        "resourceGroupName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]",
            "metadata": {
                "description": "The Resource Group name of Log Analytics Workspace."
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "allowedValues": [
                "australiacentral",
                "australiaeast",
                "australiasoutheast",
                "brazilsouth",
                "canadacentral",
                "centralindia",
                "centralus",
                "eastasia",
                "eastus",
                "eastus2",
                "francecentral",
                "japaneast",
                "koreacentral",
                "northcentralus",
                "northeurope",
                "southafricanorth",
                "southcentralus",
                "southeastasia",
                "switzerlandnorth",
                "switzerlandwest",
                "uksouth",
                "ukwest",
                "westcentralus",
                "westeurope",
                "westus",
                "westus2"
            ],
            "metadata": {
                "description": "Location for the alert. Must be the same location as the workspace."
            }
        },
        "actionGroupName": {
            "type": "string",
            "defaultValue": "ForwardToMCB-ActionGroup",
            "metadata": {
                "description": "The name of the action group that is triggered when the alert is activated."
            }
        },
        "tags": {
            "type": "object",
            "defaultValue": {
                "sourceFrom": "mcloud-support",
                "solution": "collect-alert-message"
            }
        },
        "suppressAlertsInMinutes": {
            "type": "int",
            "defaultValue": 20,
            "metadata": {
                "description": "Set an amount of time to wait before alerting again."
            }
        },
        "partition": {
            "type": "string",
            "defaultValue": "/",
            "allowedValues": [
                "/",
                "/mnt"
            ],
            "metadata": {
                "description": "Specified which the partition target. \"/\" or \"/mnt\""
            }
        },
        "lessThanFreeSpacePercent": {
            "type": "int",
            "defaultValue": 25,
            "maxValue": 50,
            "minValue": 5,
            "metadata": {
                "description": "Set a free space percent to fire alert."
            }
        }

    },
    "variables": {
        "vWorkspaceResourceId": "[resourceId(subscription().subscriptionId, parameters('resourceGroupName'), 'Microsoft.OperationalInsights/workspaces', parameters('workspaceName'))]",
        "vActionGroupResourceId": "[resourceId(subscription().subscriptionId, parameters('resourceGroupName'), 'Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
    },
    "resources":[ 
        {
            "type":"Microsoft.Insights/scheduledQueryRules",
            "name": "[parameters('alertRuleName')]",
            "apiVersion": "2018-04-16",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "properties":{
                "description": "[concat('[CRITICAL] ', parameters('alertRuleDescription'))]",
                "enabled": "true",
                "source": {
                    "query": "[concat('InsightsMetrics | where Origin == \"vm.azm.ms\" | where Namespace == \"LogicalDisk\" | where Name == \"FreeSpacePercentage\" | extend t=parse_json(Tags) | where tostring(t[\"vm.azm.ms/mountId\"]) == \"', parameters('partition'), '\" | summarize AggregatedValue= avg(Val) by bin(TimeGenerated, 5m), Computer')]",
                    "dataSourceId": "[variables('vWorkspaceResourceId')]",
                    "queryType":"ResultCount"
                },
                "schedule":{
                    "frequencyInMinutes": 5,
                    "timeWindowInMinutes": 15
                },
                "action":{
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction",
                    "severity": "2",
                    "throttlingInMin": "[parameters('suppressAlertsInMinutes')]",
                    "aznsAction":{
                        "actionGroup": "[array(variables('vActionGroupResourceId'))]",
                        "emailSubject": "[concat('[CRITICAL] ', parameters('alertRuleDescription'), ' : ', parameters('partition'))]",
                        "customWebhookPayload":"{ \"alertname\":\"#alertrulename\", \"IncludeSearchResults\":true }"
                    },
                    "trigger":{
                        "thresholdOperator": "LessThan",
                        "threshold": "[parameters('lessThanFreeSpacePercent')]",
                        "metricTrigger": {
                            "thresholdOperator": "GreaterThan",
                            "threshold": 1,
                            "metricTriggerType": "Consecutive",
                            "metricColumn": "Computer"
                        }
                    }
                }
            }
        }
    ]
}